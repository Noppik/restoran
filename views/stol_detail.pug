extends layout

block content
  h1(class='title3') Cтол номер #{stol.number}
  p(class='stol-info2') Свободен 
  if (data == 1)
    p(class='stol-info2') Сегодня 
  if (data == 2)
    p(class='stol-info5') Завтра 
  if (data == 3)
    p(class='stol-info6') Послезавтра 
  if (time == 1)
