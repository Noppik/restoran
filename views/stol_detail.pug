  if (time == 2)
    p(class='stol-info4') 16:00 
  if (time == 3)
    p(class='stol-info4') 19:00 

  input(class='client-name', type='text', placeholder="Ваше имя на бронь", id='elem1', pattern="[a-zA-Zа-яА-Я0-9]*")
  div(class='button', onclick="var name = 'you';var name2 = document.getElementById('elem1').value.replace('/', ';');if (/[a-zA-Zа-яА-Я0-9]*/.test(name2)) { name = name2; } location.href = '" + stol.url + '/' + data + '/' + time + "' + '/booked/' + name") Забронировать стол